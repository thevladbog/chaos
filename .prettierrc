{
  "bracketSpacing": true,
  "tabWidth": 2,
  "printWidth": 100,
  "singleQuote": true,
  "trailingComma": "all",
  "overrides": [
    {
      "files": ["*.js", "*.jsx", "*.ts", "*.tsx"],
      "options": {
        "parser": "typescript"
      }
    },
    {
      "files": ["*.md", "*.json", "*.yaml", "*.yml"],
      "options": {
        "tabWidth": 2
      }
    }
  ],
  "extends": [
    "@gravity-ui/stylelint-config",
    "@gravity-ui/stylelint-config/prettier",
    "@gravity-ui/eslint-config",
    "@gravity-ui/eslint-config/prettier",
    "@gravity-ui/eslint-config/import-order"
  ],
  "root": true
}
